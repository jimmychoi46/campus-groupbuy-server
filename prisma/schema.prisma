generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ListingType {
  USED
  GROUP
}

enum ListingStatus {
  OPEN
  CLOSED
}

model Owner {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  listings  Listing[]
}

model Listing {
  id          String        @id @default(cuid())
  type        ListingType
  title       String
  price       Int
  campus      String
  status      ListingStatus @default(OPEN)
  groupTarget Int?
  groupJoined Int?
  deadline    DateTime?
  desc        String
  negotiable  Boolean       @default(false)
  ownerId     String
  owner       Owner         @relation(fields: [ownerId], references: [id])
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
