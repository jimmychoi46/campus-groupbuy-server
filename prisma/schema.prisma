generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ListingType {
  USED
  GROUP
}

enum ListingStatus {
  OPEN
  CLOSED
}


model Listing {
  id          String        @id @default(cuid())
  type        ListingType
  title       String
  price       Int
  campus      String
  status      ListingStatus @default(OPEN)
  groupTarget Int?
  groupJoined Int?
  deadline    DateTime?
  desc        String
  negotiable  Boolean       @default(false)
  ownerEmail  String
  ownerName   String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
