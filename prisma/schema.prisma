generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ListingType {
  USED
  GROUP
}

enum ListingStatus {
  OPEN
  CLOSED
}

// 마감일(deadline) 및 협상 가능 여부(negotiable) 컬럼 추가

model Listing {
  id          String        @id @default(cuid())
  type        ListingType
  title       String
  price       Int
  campus      String
  status      ListingStatus @default(OPEN)
  groupTarget Int?
  groupJoined Int?
  deadline    DateTime?
  desc        String
  negotiable  Boolean       @default(false)
  ownerEmail  String
  ownerName   String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
